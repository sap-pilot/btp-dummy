<mvc:View
	controllerName="btp.dummy.incidents.Main"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	xmlns="sap.m">
	<VBox items="{cases>/}">
		<Panel expandable="true" width="auto" class="sapUiResponsiveMargin sapUiNoMarginBottom">
			<headerToolbar>
				<OverflowToolbar style="Clear">
					<Title level="H3">
						<Link text="{cases>title}" href="{cases>link}" emphasized="true" target="_blank" />
					</Title>
					<ToolbarSpacer />
				</OverflowToolbar>
			</headerToolbar>
			<content>
				<FormattedText htmlText="&lt;h5&gt;Description&lt;/h5&gt;"/>
				<FormattedText htmlText="{cases>description}"/>
				<FormattedText htmlText="&lt;h5&gt;Steps to reproduce&lt;/h5&gt;"/>
				<FormattedText htmlText="{cases>steps}"/>
				<Panel expandable="true" width="auto" class="sapUiNoMargin sapUiNoPaddingBegining sapUiNoPaddingEnd">
					<headerToolbar>
						<OverflowToolbar style="Clear">
							<Title level="H3">
								<Link text="Request #1" href="#" emphasized="true" target="_blank" />
							</Title>
							<ToolbarSpacer />
							<tnt:InfoLabel 
								text="{cases>response/status}" 
								visible="{= !!%{cases>response/status} }"
								renderMode="Narrow" 
								icon="{
									path: 'cases>response/status',
									formatter: '.formatStatusIcon'
								}"
								colorScheme="{
									path: 'cases>response/status',
									formatter: '.formatStatusColorScheme'
								}"/>
							<Button 
								icon="{= %{cases>running} ? 'sap-icon://stop' : 'sap-icon://media-play'}" 
								text="{= %{cases>running} ? 'Abort' : 'Run'}" 
								press="onRunIncident"/>
						</OverflowToolbar>
					</headerToolbar>
					<content>
						<FormattedText htmlText="&lt;h5&gt;Request&lt;/h5&gt;"/>
						<FormattedText htmlText="&lt;pre&gt;{= JSON.stringify(%{cases>request},null,2)}&lt;/pre&gt;"/>
						<FormattedText htmlText="&lt;h5&gt;Response&lt;/h5&gt;"/>
						<FormattedText htmlText="&lt;pre&gt;{= JSON.stringify(%{cases>response},null,2)}&lt;/pre&gt;"/>
					</content>
				</Panel>
			</content>
		</Panel>
	</VBox>
